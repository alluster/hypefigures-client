{
	"env": {
	  "browser": true,
	  "es2021": true,
	  "jest": true,
	  "node": true
	},
	"extends": [
	  "eslint:recommended",
	  "plugin:react/recommended",
	  "plugin:@typescript-eslint/recommended", // Add TypeScript recommended rules
	  "prettier"
	],
	"parser": "@typescript-eslint/parser", // Specify TypeScript parser
	"parserOptions": {
	  "ecmaVersion": 2021, // Use number instead of string for ecmaVersion
	  "sourceType": "module"
	},
	"plugins": ["react", "@typescript-eslint"], // Add @typescript-eslint plugin
	"rules": {
	  "react/react-in-jsx-scope": "off",
	  "no-unused-vars": "off",
	  "react/prop-types": "off",
	  "endOfLine": "off",
	  "no-multiple-empty-lines": [1, {"max": 1, "maxEOF": 0}]
	  // Additional rules specific to TypeScript can be added here if needed
	},
	"settings": {
	  "react": {
		"version": "detect"
	  }
	}
  }
  